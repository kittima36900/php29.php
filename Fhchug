    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ฟังก์ชันสลับระหว่างฟอร์มและรายการ
        document.getElementById('showFormBtn').addEventListener('click', function() {
            document.getElementById('formSection').classList.remove('d-none');
            document.getElementById('listSection').classList.add('d-none');
            this.classList.add('btn-primary');
            this.classList.remove('btn-outline-primary');
            document.getElementById('showListBtn').classList.remove('btn-primary');
            document.getElementById('showListBtn').classList.add('btn-outline-primary');
        });

        document.getElementById('showListBtn').addEventListener('click', function() {
            document.getElementById('formSection').classList.add('d-none');
            document.getElementById('listSection').classList.remove('d-none');
            this.classList.add('btn-primary');
            this.classList.remove('btn-outline-primary');
            document.getElementById('showFormBtn').classList.remove('btn-primary');
            document.getElementById('showFormBtn').classList.add('btn-outline-primary');
        });

        // ตั้งค่าวันที่เริ่มต้นเป็นวันปัจจุบัน
        document.querySelector('input[type="date"]').valueAsDate = new Date();
        
        // จัดการการส่งฟอร์ม
        document.getElementById('borrowForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('บันทึกข้อมูลเรียบร้อยแล้ว!');
            this.reset();
            document.querySelector('input[type="date"]').valueAsDate = new Date();
        });
    </script>
